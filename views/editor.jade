doctype 
html(xmlns:mml='http://www.w3.org/1998/Math/MathML')
  head
    title Archivist Composer  
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')    
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,400italic', rel='stylesheet', type='text/css')    
    link(href='./composer/composer.css', rel='stylesheet', type='text/css')
    link(href='./assets/menu.css', rel='stylesheet', type='text/css')
    script(src='./composer/lib/react.js')
    script(src='./composer/lib/jquery-2.1.3.min.js')
    script(src='./composer/composer.js')
  body
    div#topbar
      header.branding
        | Archivist
      nav.topbar
        each item in menu
          a(id="#{item.id}", href="#{item.url}")
            i(class="fa fa-#{item.icon} fa-2x")
            span.title
              | #{item.name}
      div.user-section
        div.username
          a(href='/logout')
            i.fa.fa-power-off
        div.userpic
          img(src='#{user.picture}')
    div#container