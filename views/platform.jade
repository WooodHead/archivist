extends platform/layout

block mainContent
	div#main
		div#sidebar
			header.branding
				| Archivist
			nav.sidebar
			div.user-section
					div.userpic
						img(src='#{user.picture}')
					div.username
						span #{user.firstname}<br>#{user.lastname}
						a(href='/logout')
							i.fa.fa-power-off
		div#data-container
			div.data-toolbox
				div.toolbox
					div#context-panel
					div#meter
					div.counter
			div#stackView.stackViewContainer