doctype html
html
  head
    - var description = "На картах отмечены все упомянутые в интервью географические названия и все перечисленные места работы и заключения. С точки на карте можно перейти к месту в интервью, где упоминается этот населенный пункт или лагерь."
    title Карты — Та сторона
    meta(name='description', content='#{description}')
    meta(property='og:title' content='Карты · Устная история военнопленных и остарбайтеров')
    meta(property='og:site_name' content='По ту сторону войны')
    meta(property='og:url' content='http://archive.tastorona.su/maps')
    meta(property='og:description' content='#{description}')
    meta(property='og:image' content='http://tastorona.su/static/img/maps-social.jpg')
    meta(property='og:type' content='website')
    meta(property='og:locale' content='ru_RU')
    meta(property='twitter:card' content='summary_large_image')
    meta(property='twitter:title' content='Карты · Устная история военнопленных и остарбайтеров')
    meta(property='twitter:description' content='#{description}')
    meta(property='twitter:url' content='http://archive.tastorona.su/maps')
    meta(property='twitter:image' content='http://tastorona.su/static/img/maps-social.jpg')
    link(rel='canonical', href='http://tastorona.su')
    link(rel='stylesheet', href='/assets/styles/font-awesome/css/font-awesome.css')
    link(rel='stylesheet', href='/assets/styles/nprogress/nprogress.css')
    link(rel='stylesheet', href='/assets/styles/mapbox/mapbox.css')
    link(rel='stylesheet', href='/assets/styles/leaflet/MarkerCluster.css')
    link(rel='stylesheet', href='/assets/styles/leaflet/MarkerCluster.Archivist.css')
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,400italic', rel='stylesheet', type='text/css')
    meta(charset='UTF-8')
    link(rel='stylesheet', href='/assets/styles/main-menu.css')
    link(href='/map/map.css', rel='stylesheet', type='text/css')
    // Libs
    // App
    script(type='text/javascript')
      | window.mediaServer = "#{media}";
      | window.mapboxToken = "#{mapbox_token}";
      | window.locationId = "#{locationId}";
      | window.mapId = "#{mapbox_mapid}";
    script(src='/assets/javascripts/jquery-2.1.3.min.js')
    script(src='/map/map.js')
    script(src='/assets/javascripts/ga.js')
  body
    include public/menu
    #map_container
    script(type='text/javascript')
      | $(".fixed-header").addClass("floated visible");
      | $("li.maps").addClass("active");